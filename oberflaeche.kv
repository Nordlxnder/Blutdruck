
<Bildschirmverwalter@ScreenManager>

<Bildschirm@Screen>

<Box_v@BoxLayout>
    orientation: 'vertical'

<Box_h@BoxLayout>
    orientation: 'horizontal'

<Beschriftung@Label>
    font_size:  24

<Eingabefenster@Box_v>


<Knopf>:
    background_normal: './bilder/knopf_orange.png'
    background_down: './bilder/knopf_blau.png'
    font_size:  28
    color: 0.1,0.1,0.3,1
    size_hint_y: 0.2


<Knopf_Schliessen@Knopf>:
    text: 'Schliessen'
    on_release:
        print("Fertig!")
        app.stop()


